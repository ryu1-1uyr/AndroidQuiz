<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:paddingTop="50dp"
        android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="50dp">
        <Button
            android:text="@string/normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/normal" android:layout_marginTop="80dp"/>
        <Button
            android:text="@string/hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/hard" android:layout_marginTop="50dp"/>
        <Button
            android:text="@string/no_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/no_order" android:layout_marginTop="50dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>